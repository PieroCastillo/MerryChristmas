        Title="MerryChristmas" CanResize="False">
	<Window.Styles>
		<Style Selector="Ellipse.red">
			<Style.Animations>
				<Animation Duration="0:0:2" IterationCount="Infinite">
					<KeyFrame Cue="0%">
						<Setter Property="Fill" Value="Red"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Fill" Value="Olive"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Fill" Value="Blue"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
		<Style Selector="Ellipse.olive">
			<Style.Animations>
				<Animation Duration="0:0:2" IterationCount="Infinite">
					<KeyFrame Cue="0%">
						<Setter Property="Fill" Value="Olive"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Fill" Value="Blue"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Fill" Value="Red"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
		<Style Selector="Ellipse.blue">
			<Style.Animations>
				<Animation Duration="0:0:2" IterationCount="Infinite">
					<KeyFrame Cue="0%">
						<Setter Property="Fill" Value="Blue"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Fill" Value="Red"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Fill" Value="Olive"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>
		<Style Selector="Ellipse.red">
			<Style.Animations>
				<Animation Duration="0:0:2" IterationCount="Infinite">
					<KeyFrame Cue="0%">
						<Setter Property="Fill" Value="Red"/>
					</KeyFrame>
					<KeyFrame Cue="50%">
						<Setter Property="Fill" Value="Olive"/>
					</KeyFrame>
					<KeyFrame Cue="100%">
						<Setter Property="Fill" Value="Blue"/>
					</KeyFrame>
				</Animation>
			</Style.Animations>
		</Style>


		<Style Selector="Ellipse.ball">
			<Setter Property="Height" Value="20"/>
			<Setter Property="Width" Value="20"/>
		</Style>
